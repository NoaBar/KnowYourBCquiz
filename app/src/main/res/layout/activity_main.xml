<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.noah.knowyourbcquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

            <ImageView
                style="@style/images"
                android:src="@drawable/condoms" />

            <ImageView
                style="@style/images"
                android:src="@drawable/pillsround" />

            <ImageView
                style="@style/images"
                android:src="@drawable/iudsmall" />


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                style="@style/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:gravity="center_horizontal"
                android:paddingStart="20dp"
                android:text="Know Your Contraception method Quiz!" />

            <EditText
                android:id="@+id/name"
                style="@style/questions"
                android:background="@color/babyBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_name"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/question_1"
                style="@style/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="@string/question_1" />

            <EditText
                android:id="@+id/answer_1"
                style="@style/questions"
                android:background="@color/babyBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type you answer here"
                android:inputType="textCapWords" />


            <TextView
                android:id="@+id/question_2"
                style="@style/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/question_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/babyBlue"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:paddingStart="10dp">

                <CheckBox
                    android:id="@+id/answer_2_1"
                    style="@style/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="The Pill" />

                <CheckBox
                    android:id="@+id/answer_2_2"
                    style="@style/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Male and female condom" />
                <CheckBox
                    android:id="@+id/answer_2_3"
                    style="@style/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Intrauterine device (IUD): copper containing" />
                <CheckBox
                    android:id="@+id/answer_2_4"
                    style="@style/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Vaginal ring" />
                <CheckBox
                    android:id="@+id/answer_2_5"
                    style="@style/checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Fertility Awareness" />
            </LinearLayout>


            <TextView
                android:id="@+id/question_3"
                style="@style/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/question_3" />

            <RadioGroup
                android:id="@+id/answer_3"
                style="@style/answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <RadioButton
                    android:id="@+id/answer_3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Once a month" />

                <RadioButton
                    android:id="@+id/answer_3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Once a week" />
                <RadioButton
                    android:id="@+id/answer_3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Every 3 years" />
            </RadioGroup>

            <TextView
                android:id="@+id/question_4"
                style="@style/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/question_4" />

            <RadioGroup
                android:id="@+id/answer_4"
                style="@style/answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <RadioButton
                    android:id="@+id/answer_4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Anytime I want" />

                <RadioButton
                    android:id="@+id/answer_4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="At the first day of my menstruation" />

                <RadioButton
                    android:id="@+id/answer_4_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="On Sundays" />
            </RadioGroup>

            <TextView
                android:id="@+id/question_5"
                style="@style/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/question_5" />

            <RadioGroup
                android:id="@+id/answer_5"
                style="@style/answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <RadioButton
                    android:id="@+id/answer_5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Water/Silicon" />

                <RadioButton
                    android:id="@+id/answer_5_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="Oil" />


            </RadioGroup>

            <TextView
                android:id="@+id/question_6"
                style="@style/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/question_6" />

            <RadioGroup
                android:id="@+id/answer_6"
                style="@style/answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <RadioButton
                    android:id="@+id/answer_6_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="yes!" />

                <RadioButton
                    android:id="@+id/answer_6_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="answers_check"
                    android:text="No. Use it only once and then throw it away." />
            </RadioGroup>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/salmon"
                android:onClick="finish"
                android:text="@string/finish_button"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/peach"
                android:onClick="resetGrade"
                android:text="@string/reset_button"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/more_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/more_info"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/link_your_life"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="@string/your_life"
                android:textColorLink="@color/darkaqua" />

            <TextView
                android:id="@+id/link_who"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="@string/who"
                android:textColorLink="@color/darkaqua" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

