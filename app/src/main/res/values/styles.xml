<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titles">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">@dimen/five</item>
        <item name="android:paddingStart">@dimen/five</item>
        <item name="android:paddingTop">@dimen/five</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="questions">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/questions_answers_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/aqua</item>
        <item name="android:padding">@dimen/ten</item>

        <item name="android:layout_marginTop">@dimen/ten</item>
        <item name="android:layout_marginStart">@dimen/ten</item>
        <item name="android:layout_marginEnd">@dimen/ten</item>

        <item name="android:paddingStart">@dimen/twenty</item>
        <item name="android:paddingEnd">@dimen/twenty</item>
        <item name="android:paddingTop">@dimen/ten</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="answers">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/questions_answers_size</item>
        <item name="android:background">@color/babyBlue</item>
        <item name="android:layout_marginStart">@dimen/ten</item>
        <item name="android:layout_marginEnd">@dimen/ten</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="checkbox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/questions_answers_size</item>
        <item name="android:background">@color/babyBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="images">
        <item name="android:background">@color/salmon</item>
        <item name="android:padding">@dimen/five</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="BCTypesLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/ten</item>
        <item name="android:gravity">center|top</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="links">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/zero</item>
        <item name="android:paddingEnd">@dimen/twenty</item>
        <item name="android:paddingStart">@dimen/twenty</item>
        <item name="android:paddingTop">@dimen/ten</item>
        <item name="android:textSize">@dimen/questions_answers_size</item>
    </style>


</resources>
